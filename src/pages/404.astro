---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
---

<html lang="en">
  <head>
    <MainHead title="Page Not Found" />
    <style>
      .wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        margin-top: 5em;
        margin-bottom: 5em;
      }

      .title {
        font-size: 3rem;
        color: var(--c-blue);
        margin-bottom: 1rem;
      }

      .message {
        font-size: 1.25rem;
        color: var(--t-fg);
        margin-bottom: 2rem;
      }

      .home-link {
        display: inline-block;
        padding: 0.75em 1.5em;
        font-size: 1rem;
        color: white;
        background-color: var(--c-blue);
        border-radius: 0.5em;
        text-decoration: none;
        transition: background-color 0.3s ease;
      }

      .home-link:hover {
        background-color: var(--c-dark-blue);
      }

      .illustration {
        margin-top: 2em;
        width: 50%;
        max-width: 400px;
      }
    </style>
  </head>
  <body>
    <Nav />
    <div class="wrapper">
      <h1 class="title">404 - Page Not Found</h1>
      <p class="message">
        Sorry, the page you are looking for does not exist. You can always go
        back to the homepage.
      </p>
      <img
        src="/assets/404-illustration.webp"
        alt="404 Illustration"
        class="illustration"
      />
    </div>
    <Footer />
  </body>
</html>
